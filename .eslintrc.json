{
    "extends": [
      "airbnb"
    ],
    "rules": {
      "no-unused-vars": "warn",
      "comma-dangle": ["error", "never"],
      "semi": ["warn", "always"],
      "import/order": ["warn", {
        "groups": ["builtin", "external", "internal",
        "unknown", "parent", "sibling", "index", "object", "type"],
        "newlines-between": "always-and-inside-groups"
      }],
      "prefer-const": "warn",
      "linebreak-style": "off"
    },
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ],
    "env": {
      "browser": true,
      "node": true
    }
  }